{
  "name": "izi18n",
  "displayName": "Izi18n",
  "description": "izi",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "IZI Copy To Folder",
      "properties": {
        "extension.targetedFile": {
          "type": "string",
          "default": "",
          "description": "The path for targeted JSON file to update"
        },
        "extension.keyForAutoAddedFields": {
          "type": "string",
          "default": "autoAddedFields",
          "description": "The key name for all auto added fields"
        }
      }
    },
    "commands": [
      {
        "command": "extension.activateCopyToFolder",
        "title": "Copy Selected Text to Folder"
      }
    ],
    "keybindings": [
      {
        "command": "extension.activateCopyToFolder",
        "key": "ctrl+k t",
        "mac": "cmd+k t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
